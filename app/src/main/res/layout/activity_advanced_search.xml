        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="48dp"
        android:layout_height="21dp"
        android:layout_marginBottom="156dp"
